<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="housemaid_root"
            name="Housemaid"
            web_icon="static/description/icon.png"
            sequence="145" />
        <menuitem id="housemaid_menu_tickets"
            name="Tickets"
            parent="housemaid_root"
            sequence="10" />

        <!-- This Menu Item Must have a parent -->
        <menuitem id="housemaid_menu_maid"
            name="Maids"
            parent="housemaid_root"
            sequence="20" />

        <menuitem id="housemaid_menu_data"
            name="Partners"
            parent="housemaid_root"
            sequence="30" />

        <!-- This Menu Item Must have a parent -->
        <menuitem id="housemaid_menu_configuration"
            name="Configuration"
            parent="housemaid_root"
            sequence="50" />


    </data>

    <data noupdate="1">
        <record id="menu_mymaids"
            model="website.menu">
            <field name="name">My Maids</field>
            <field name="url">/mymaids</field>
            <field name="parent_id"
                ref="website.main_menu"/>
            <field name="sequence">55</field>
        </record>

        <record id="menu_create_maid_form"
            model="website.menu">
            <field name="name">Create Maid</field>
            <field name="url">/maidform</field>
            <field name="parent_id"
                ref="website.main_menu"/>
            <field name="sequence">56</field>
        </record>

    </data>

</odoo>