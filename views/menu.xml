<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="housemaid_root"
            name="HouseMaid"
            web_icon="static/description/icon.png"
            sequence="145" />
        <menuitem id="housemaid_menu_master"
            name="Masterdata"
            parent="housemaid_root"
            sequence="10" />
        <!-- This Menu Item Must have a parent -->
        <menuitem id="housemaid_menu_tickets"
            name="Orders"
            parent="housemaid_root"
            sequence="20" />
        <!-- This Menu Item Must have a parent -->

        <menuitem id="housemaid_menu_documents"
            name="Documents"
            parent="housemaid_root"
            sequence="30" />

        <!-- This Menu Item Must have a parent -->
        <menuitem id="housemaid_menu_configuration"
            name="Configuration"
            parent="housemaid_root"
            sequence="50" />

        <!-- Inherit account Move (vendor bill) Form View to Modify it -->
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="housemaid_menu_vendor_bill"
            name="Vendor Bill"
            parent="housemaid_menu_documents"
            action="account.action_move_in_invoice_type"
            sequence="31"/>

        <menuitem id="housemaid_menu_hr_expense"
            name="Expense Tickets"
            parent="housemaid_menu_documents"
            action="hr_expense.hr_expense_actions_my_all"
            sequence="33"/>

        <menuitem id="housemaid_menu_customer_invoice"
            name="Customer Invoice"
            parent="housemaid_menu_documents"
            action="account.action_move_out_invoice_type"
            sequence="35"
            groups="ms_housemaid.group_housemaid_manager" />

    </data>
</odoo>