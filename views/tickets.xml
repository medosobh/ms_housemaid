<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="housemaid_tickets_form"
        model="ir.ui.view">
        <field name="name">housemaid.tickets.form</field>
        <field name="model">housemaid.tickets</field>
        <field name="arch"
            type="xml">
            <form string="Ticket">
                <header>
                    <field name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                        clickable="True"
                        type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <group name="tickets_ticket"
                            string="Ticket">
                            <field name="code"
                                class="oe_inline"/>
                            <field name="ticket_type"
                                class="oe_inline"/>
                        </group>
                    </div>
                    <div>
                        <group name="tickets_sponser"
                            string="Sponser information">
                            <field name="name"
                                class="oe_inline"/>
                            <field name="sponser_phone"
                                widget="phone"
                                class="oe_inline"/>
                            <field name="sponser_email"
                                widget="email"
                                class="oe_inline"/>
                            <field name="sponsers_id"
                                class="oe_inline"/>
                        </group>
                    </div>
                    <div>
                        <group name="tickets_maid"
                            string="Maid Requirements">
                            <group name="maids_basic"
                                string="Salary and Contract">
                                <field name="monthly_salary"
                                    class="oe_inline"/>
                                <field name="currency_id"
                                    groups="base.group_multi_currency"
                                    class="oe_inline"/>
                                <field name="contract_period"
                                    class="oe_inline"/>
                            </group>
                            <group name="education"
                                string="Language and Education">
                                <field name="arabic_lang"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                                <field name="english_lang"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                                <field name="education"/>
                            </group>
                            <group name="personal"
                                string="Information">
                                <field name="country_id"/>
                                <field name="religion"/>
                                <field name="gender"/>
                                <field name="children_no"/>
                                <field name="marital_status"/>
                            </group>
                            <group name="attribute"
                                string="Attribute">
                                <field name="skin_color"/>
                                <field name="age"/>
                                <field name="hight"/>
                                <field name="weight"/>
                            </group>
                            <group name="skills"
                                string="Skills">
                                <field name="skills_cleaning"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                                <field name="skills_arabic_cooking"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                                <field name="skills_baby_sitting"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                                <field name="skills_washing"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                                <field name="skills_ironing"
                                    widget="radio"
                                    options="{'horizontal': True}"/>
                            </group>
                            <group name="operation"
                                string="Operation">
                                <field name="company_id"
                                    groups="base.group_multi_company"/>
                                <field name="user_id"
                                    widget="selection"/>
                                <field name="active"
                                    invisible="1"/>
                            </group>
                        </group>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="housemaid_tickets_tree"
        model="ir.ui.view">
        <field name="name">housemaid.tickets.tree</field>
        <field name="model">housemaid.tickets</field>
        <field name="arch"
            type="xml">
            <tree string="Tickets List"
                sample="1">
                <field name="code"/>
                <field name="state"/>
                <field name="name"/>
                <field name="sponser_phone"/>
                <field name="sponser_email"/>
                <field name="sponsers_id"/>
                <field name="activity_ids"
                    widget="list_activity"/>
                <field name="monthly_salary"/>
                <field name="currency_id"
                    groups="base.group_multi_currency"/>
                <field name="contract_period"/>
                <field name="country_id"/>
                <field name="religion"/>
                <field name="gender"/>
                <field name="children_no"/>
                <field name="marital_status"/>
            </tree>
        </field>
    </record>

    <record id="housemaid_tickets_search"
        model="ir.ui.view">
        <field name="name">housemaid.tickets.search</field>
        <field name="model">housemaid.tickets</field>
        <field name="arch"
            type="xml">
            <search string="Tickets List">
                <field name="company_id"
                    widget="selection"/>
                <field name="user_id"
                    widget="selection"/>
                <field name="country_id"
                    widget="selection"/>
                <filter name="filter_archived"
                    string="Archived"
                    domain="[('active', '=', False)]"/>
                <group expand="0"
                    string="Group by">
                    <filter string="State"
                        name="group_by_state"
                        context="{'group_by':'state'}"/>
                    <filter string="Company"
                        name="group_by_company_id"
                        context="{'group_by':'company_id'}"/>
                    <filter string="Sales Man"
                        name="group_by_user"
                        context="{'group_by':'user_id'}"/>
                    <filter string="Country"
                        name="group_by_country_id"
                        context="{'group_by':'country_id'}"/>
                </group>
                <searchpanel>
                    <field name="company_id"
                        select="multi"
                        string="Relative Company"
                        enable_counters="1"/>
                    <field name="country_id"
                        select="multi"
                        string="Relative Country"
                        enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="housemaid_tickets_action"
        model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">housemaid.tickets</field>
        <field name="view_mode">tree,form</field>
        <field name="help"
            type="html">
            <p class="o_view_nocontent_smiling_face">Create your first ticket!</p>
        </field>
    </record>

    <menuitem id="housemaid_tickets_menu"
        name="Tickets"
        action="housemaid_tickets_action"
        parent="housemaid_menu_tickets"
        sequence="21"/>
</odoo>