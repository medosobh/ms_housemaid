<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home"
        inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]"
            position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/my/maids</t>
                <t t-set="title">Maids</t>
                <t t-set="placeholder_count"
                    t-value="'maids_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs"
        inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]"
            position="inside">
            <li t-if="page_name == 'my_maids_portal_list_view'"
                class="breadcrumb-item">Maids</li>
        </xpath>
    </template>

    <template id="my_maids_portal_list_view"
        name="Maids">
        <t t-call="portal.portal_layout">

            <div class="oe_structure">
                <div class="container">
                    <br />
                    <center>
                        <h3> hi, your maid's cv list is here</h3>
                    </center>
                    <br />
                    <table class="table table-bordered">
                        <thead style="font-size: 16px;">
                            <tr>
                                <td class="test-center">Office:</td>
                                <td class="test-center">Code:</td>
                                <td class="test-center">Name:</td>
                                <td class="test-center">Job:</td>
                                <td class="test-center">Salary:</td>
                                <td class="test-center">Currency:</td>
                                <td class="test-center">State:</td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="maids"
                                t-as="maid">
                                <tr>
                                    <td>
                                        <t t-out="maid.offices_id.name"/>
                                    </td>
                                    <td>
                                        <t t-out="maid.code"/>
                                    </td>
                                    <td>
                                        <a t-attf-href="/my/maids/#{maid.id}">
                                            <t t-out="maid.name"/>
                                        </a>
                                    </td>
                                    <td>
                                        <t t-out="maid.jobs_id.name"/>
                                    </td>
                                    <td>
                                        <t t-out="maid.monthly_salary"/>
                                    </td>
                                    <td>
                                        <t t-out="maid.currency_id.name"/>
                                    </td>
                                    <td>
                                        <t t-out="maid.state"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="my_maids_portal_form_view"
        inherit_id="portal.portal_sidebar">
        <xpath expr="//div[hasclass('o_portal_sidebar')]"
            position="inside">

            <div>
                <p t-out="image"
                    widget="image"
                    class="oe_avatar" />
            </div>
            <div class="row mt16">
                <p t-out="maid.offices_id.name"/>
                <p t-out="maid.code"/>
                <p t-out="maid.jobs_id.name"/>
                <p t-out="maid.monthly_salary"/>
                <p t-out="maid.currency_id.name"/>
                <p t-out="maid.state"/>
                <p t-out="maid.contract_period"/>
                <p t-out="maid.arabic_lang"/>
                <p t-out="maid.english_lang"/>
                <p t-out="maid.education"/>
                <p t-out="maid.passport_no"/>
                <p t-out="maid.passport_place"/>
                <p t-out="maid.passport_issue_date"/>
                <p t-out="maid.passport_expire_date"/>
                <p t-out="maid.indentation"/>
                <p t-out="maid.religion"/>
                <p t-out="maid.gender"/>
                <p t-out="maid.children_no"/>
                <p t-out="maid.birthday"/>
                <p t-out="maid.place_of_birth"/>
                <p t-out="maid.marital_status"/>
                <p t-out="maid.skin_color"/>
                <p t-out="maid.age"/>
                <p t-out="maid.hight"/>
                <p t-out="maid.weight"/>
                <p t-out="maid.skills_cleaning"/>
                <p t-out="maid.skills_arabic_cooking"/>
                <p t-out="maid.skills_baby_sitting"/>
                <p t-out="maid.skills_washing"/>
                <p t-out="maid.skills_ironing"/>
                <p t-out="maid.skills_googlelocation"/>
                <p t-out="maid.skills_driving"/>
                <p t-out="maid.country_id"/>
                <p t-out="maid.partner_id"/>
                <p t-out="maid.description"/>
                <p t-out="maid.user_id"/>
                <p t-out="maid.company_id"/>
            </div>

        </xpath>
    </template>


</odoo>
