<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
		<xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
			<li t-if="page_name == 'my_maids_portal_list_view'" class="breadcrumb-item">
				Maids
			</li>
			<li t-if="page_name == 'my_maids_portal_form_view'" class="breadcrumb-item">
				<a href="/my/maids">
					Maids
				</a>
				/
				<span t-out="maids.name" />
			</li>
			<li t-if="page_name == 'my_maids_portal_new_form_view'" class="breadcrumb-item">
					Create New Maid
			</li>
			<t t-set="breadcrumbs_searchbar" t-value="True"/>
		</xpath>
	</template>
	<template id="portal_my_home" inherit_id="portal.portal_my_home">
		<xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
			<t t-call="portal.portal_docs_entry">
				<t t-set="url">
					/my/maid/new
				</t>
				<t t-set="title">
					New Maid CV
				</t>
			</t>
			<t t-call="portal.portal_docs_entry">
				<t t-set="url">
					/my/maids
				</t>
				<t t-set="title">
					Maids
				</t>
				<t t-set="placeholder_count" t-value="'maids_count'" />
			</t>
		</xpath>
	</template>
	<template id="my_maids_portal_list_view" name="Maids">
		<t t-call="portal.portal_layout">
			<t t-call="portal.portal_searchbar">
				<t t-set="title">Maids List</t>
			</t>
			<t t-if="not maids">
				<p>There are currently no maids for your office.</p>
			</t>
			<t t-if="maids" t-call="portal.portal_table">
				<thead style="font-size: 16px;">
					<tr class="active">
						<td class="test-center">
									Office:
								</td>
						<td class="test-center">
									Code:
								</td>
						<td class="test-center">
									Name:
								</td>
						<td class="test-center">
									Job:
								</td>
						<td class="test-center">
									Salary:
								</td>
						<td class="test-center">
									Currency:
								</td>
						<td class="test-center">
									Country:
								</td>
						<td class="test-center">
									State:
								</td>
					</tr>
				</thead>
				<tbody>
					<t t-foreach="maids" t-as="maids">
						<tr>
							<td>
								<t t-out="maids.offices_id.name" />
							</td>
							<td>
								<t t-out="maids.code" />
							</td>
							<td>
								<a t-attf-href="/my/maids/#{maids.id}">
									<t t-out="maids.name" />
								</a>
							</td>
							<td>
								<t t-out="maids.jobs_id.name" />
							</td>
							<td>
								<t t-out="maids.monthly_salary" />
							</td>
							<td>
								<t t-out="maids.currency_id.name" />
							</td>
							<td>
								<t t-out="maids.country_id.name" />
							</td>
							<td>
								<t t-out="maids.state" />
							</td>
						</tr>
					</t>
				</tbody>
			</t>
		</t>
	</template>
