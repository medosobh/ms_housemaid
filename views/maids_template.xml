<odoo>
	<template id="portal_my_home" inherit_id="portal.portal_my_home">
		<xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
			<t t-call="portal.portal_docs_entry">
				<t t-set="url">
					/my/maid/new
				</t>
				<t t-set="title">
					New Maid CV
				</t>
			</t>
			<t t-call="portal.portal_docs_entry">
				<t t-set="url">
					/my/maids
				</t>
				<t t-set="title">
					Maids
				</t>
				<t t-set="placeholder_count" t-value="'maids_count'" />
			</t>
		</xpath>
	</template>
	<template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
		<xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
			<li t-if="page_name == 'my_maids_portal_list_view'" class="breadcrumb-item">
				Maids
			</li>
			<li t-if="page_name == 'my_maids_portal_form_view'" class="breadcrumb-item">
				<a href="/my/maids">
					Maids
				</a>
				/
				<span t-out="maid.name" />
			</li>
			<li t-if="page_name == 'my_maids_portal_new_form_view'" class="breadcrumb-item">
					Create New Maid
			</li>
			<t t-set="breadcrumbs_searchbar" t-value="True"/>
		</xpath>
	</template>
	<template id="my_maids_portal_list_view" name="Maids">
		<t t-call="portal.portal_layout">
			<div class="oe_structure">
				<div class="container">
					<br />
					<center>
						<h3>
							hi, your maid's cv list is here
						</h3>
					</center>
					<br />
					<table class="table table-bordered">
						<thead style="font-size: 16px;">
							<tr>
								<td class="test-center">
									Office:
								</td>
								<td class="test-center">
									Code:
								</td>
								<td class="test-center">
									Name:
								</td>
								<td class="test-center">
									Job:
								</td>
								<td class="test-center">
									Salary:
								</td>
								<td class="test-center">
									Currency:
								</td>
								<td class="test-center">
									Country:
								</td>
								<td class="test-center">
									State:
								</td>
							</tr>
						</thead>
						<tbody>
							<t t-foreach="maids" t-as="maid">
								<tr>
									<td>
										<t t-out="maid.offices_id.name" />
									</td>
									<td>
										<t t-out="maid.code" />
									</td>
									<td>
										<a t-attf-href="/my/maids/#{maid.id}">
											<t t-out="maid.name" />
										</a>
									</td>
									<td>
										<t t-out="maid.jobs_id.name" />
									</td>
									<td>
										<t t-out="maid.monthly_salary" />
									</td>
									<td>
										<t t-out="maid.currency_id.name" />
									</td>
									<td>
										<t t-out="maid.country_id.name" />
									</td>
									<td>
										<t t-out="maid.state" />
									</td>
								</tr>
							</t>
						</tbody>
					</table>
				</div>
