<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="housemaid_maids_form"
        model="ir.ui.view">
        <field name="name">housemaid.maids.form</field>
        <field name="model">housemaid.maids</field>
        <field name="arch"
            type="xml">
            <form string="Maids">
                <header>
                    <field name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                        clickable="True"
                        type="object"/>
                    <button string="Set to Draft"
                        name="action_draft_maid"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'in', ('draft'))]}" />
                    <button string="Checking"
                        name="action_check_maid"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'in', ('check'))]}" />
                    <button string="Open to Work"
                        name="action_open_maid"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'in', ('draft','open','ready','hiring','backout'))]}" />
                    <button string="Ready to Work"
                        name="action_ready_maid"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'in', ('draft','ready','open','hiring','backout'))]}" />
                    <button string="Hiring"
                        name="action_hiring_maid"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'in', ('draft','check','open','ready', 'hiring','backout'))]}" />
                    <button string="Set Backout"
                        name="action_backout_maid"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'in', ('backout'))]}" />
                </header>
                <sheet>
                    <div>
                        <field name="image"
                            widget="image"
                            class="oe_avatar" />
                    </div>
                    <div class="oe_title">
                        <group name="maids_main"
                            string="Main Information">
                            <group>
                                <field name="offices_id"
                                    class="oe_inline"/>
                                <field name="code"
                                    class="oe_inline"/>
                                <field name="name"
                                    class="oe_inline"/>
                                <field name="phone"
                                    widget="phone"
                                    class="oe_inline"/>
                                <field name="email"
                                    widget="email"
                                    class="oe_inline"/>
                            </group>
                            <group>
                                <field name="jobs_id"
                                    class="oe_inline"/>
                                <field name="monthly_salary"
                                    class="oe_inline"/>
                                <field name="currency_id"
                                    groups="base.group_multi_currency"/>
                                <field name="contract_period"
                                    class="oe_inline"/>
                            </group>
                        </group>
                    </div>
                    <div>
                        <group>
                            <group name="education"
                                string="Language and Education">
                                <field name="arabic_lang"
                                    widget="boolean_toggle"/>
                                <field name="english_lang"
                                    widget="boolean_toggle"/>
                                <field name="education"/>
                            </group>
                            <group name="passport"
                                string="Passport">
                                <field name="passport_no"/>
                                <field name="passport_place"/>
                                <field name="passport_issue_date"/>
                                <field name="passport_expire_date"/>
                                <field name="indentation"/>
                            </group>
                            <group name="personal"
                                string="Personal information">
                                <field name="country_id"/>
                                <field name="religion"/>
                                <field name="gender"/>
                                <field name="children_no"/>
                                <field name="birthday"/>
                                <field name="place_of_birth"/>
                                <field name="marital_status"/>
                            </group>
                            <group name="attribute"
                                string="Personal Attribute">
                                <field name="skin_color"/>
                                <field name="age"/>
                                <field name="hight"/>
                                <field name="weight"/>
                            </group>
                            <group name="skills"
                                string="Personal Skills">
                                <field name="skills_cleaning"
                                    widget="boolean_toggle"/>
                                <field name="skills_arabic_cooking"
                                    widget="boolean_toggle"/>
                                <field name="skills_baby_sitting"
                                    widget="boolean_toggle"/>
                                <field name="skills_washing"
                                    widget="boolean_toggle"/>
                                <field name="skills_ironing"
                                    widget="boolean_toggle"/>
                                <field name="skills_googlelocation"
                                    widget="boolean_toggle"/>
                                <field name="skills_driving"
                                    widget="boolean_toggle"/>
                            </group>
                            <group name="more"
                                string="Addtional Information">
                                <field name="partner_id"/>
                                <field name="description"/>
                            </group>
                            <group name="operation"
                                string="Operation">
                                <field name="visa_no"/>
                                <field name="contract_no"/>
                                <field name="arrival_date"/>
                                <field name="receive_date"/>
                                <field name="company_id"
                                    groups="base.group_multi_company"/>
                                <field name="user_id"
                                    widget="selection"/>
                                <field name="tickets_id"
                                    widget="selection"/>
                                <field name="garanty_day" />
                                <field name="active"
                                    invisible="1"/>
                            </group>
                        </group>
                    </div>
                    <notebook>
                        <page name="housemaid_maids_maidslogs"
                            string="History">
                            <field name="maidslogs_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="state"/>
                                    <field name="visa_no"/>
                                    <field name="contract_no"/>
                                    <field name="start_contract"/>
                                    <field name="end_contract"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="housemaid_maids_tree"
        model="ir.ui.view">
        <field name="name">housemaid.maids.tree</field>
        <field name="model">housemaid.maids</field>
        <field name="arch"
            type="xml">
            <tree string="Maids List"
                sample="1">
                <field name="state"/>
                <field name="sponsers_id"/>
                <field name="visa_no"/>
                <field name="passport_no"/>
                <field name="indentation"/>
                <field name="arrival_date"/>
                <field name="receive_date"/>
                <field name="company_id"
                    groups="base.group_multi_company"/>
                <field name="offices_id"/>
                <field name="country_id"/>
                <field name="name"/>
                <field name="code"
                    optional="hide"/>
                <field name="phone"
                    widget="phone"
                    optional="hide"/>
                <field name="email"
                    widget="email"
                    optional="hide"/>
                <field name="jobs_id"/>
                <field name="monthly_salary"
                    widget="monetary"
                    optional="hide"/>
                <field name="currency_id"
                    invisible="1"
                    optional="hide"/>
                <field name="contract_period"
                    optional="hide"/>
                <field name="religion"
                    optional="hide"/>
                <field name="gender"
                    optional="hide"/>
                <field name="marital_status"
                    optional="hide"/>
                <field name="description"
                    optional="hide"/>
                <field name="activity_ids"
                    widget="list_activity"/>
                <field name="active"
                    invisible="1"/>
                <field name="user_id"
                    widget="selection"/>
                <field name="tickets_id"
                    widget="selection"/>
            </tree>
        </field>
    </record>

    <record id="housemaid_maids_kanban"
        model="ir.ui.view">
        <field name="name">housemaid.maids.kanban</field>
        <field name="model">housemaid.maids</field>
        <field name="arch"
            type="xml">
            <kanban default_group_by="state"
                class="o_kanban_mobile">
                <field name="id"/>
                <field name="state"/>
                <field name="offices_id" />
                <field name="name"/>
                <field name="image"/>
                <field name="code"/>
                <field name="jobs_id" />
                <field name="monthly_salary" />
                <field name="currency_id"/>
                <field name="passport_no"/>
                <field name="passport_expire_date"/>
                <field name="indentation"/>
                <field name="country_id"/>
                <field name="religion"/>
                <field name="gender"/>
                <field name="children_no"/>
                <field name="place_of_birth"/>
                <field name="marital_status"/>
                <field name="skin_color"/>
                <field name="age"/>
                <field name="hight"/>
                <field name="weight"/>
                <field name="activity_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <t t-if="record.image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                    t-attf-style="background-image:url('#{kanban_image('housemaid.maids', 'image', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image"
                                    alt="Avatar"
                                    t-att-src='_s + "/ms_housemaid/static/img/maid.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Applied Job:
                                        <field name="jobs_id"/>
                                    </li>
                                    <li>Country:
                                        <field name="country_id"/>
                                    </li>
                                    <li>Office:
                                        <field name="offices_id"/>
                                    </li>
                                    <li>Ticket:
                                        <field name="tickets_id"/>
                                    </li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content position-absolute fixed-bottom mr-2">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left"/>
                                    <div class="oe_kanban_bottom_right float-right">
                                        <div class="hr_activity_container">
                                            <field name="activity_ids"
                                                widget="kanban_activity"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="housemaid_maids_search"
        model="ir.ui.view">
        <field name="name">housemaid.maids.search</field>
        <field name="model">housemaid.maids</field>
        <field name="arch"
            type="xml">
            <search string="Maids">
                <field name="company_id"
                    widget="selection"/>
                <field name="user_id"
                    widget="selection"/>
                <field name="country_id"
                    widget="selection"/>
                <filter name="filter_archived"
                    string="Archived"
                    domain="[('active', '=', False)]"/>
                <group expand="0"
                    string="Group by">
                    <filter string="Company"
                        name="group_by_company_id"
                        context="{'group_by':'company_id'}"/>
                    <filter string="Operator"
                        name="group_by_user"
                        context="{'group_by':'user_id'}"/>
                    <filter string="Country"
                        name="group_by_country_id"
                        context="{'group_by':'country_id'}"/>
                </group>
                <searchpanel>
                    <field name="offices_id"
                        select="multi"
                        string="Office"
                        enable_counters="1"/>
                    <field name="country_id"
                        select="multi"
                        string="Country"
                        enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="housemaid_maids_action"
        model="ir.actions.act_window">
        <field name="name">Maids</field>
        <field name="res_model">housemaid.maids</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help"
            type="html">
            <p class="o_view_nocontent_smiling_face">Create your first Maid!</p>
        </field>
    </record>

    <menuitem id="housemaid_maids_menu"
        name="Maids"
        action="housemaid_maids_action"
        parent="housemaid_menu_data"
        sequence="12"/>

</odoo>