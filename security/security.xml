<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category"
            id="module_category_housemaid">
            <field name="name">Housemaid Management</field>
            <field name="description">Helps you manage your Housemaid App.</field>
            <field name="sequence">30</field>
        </record>

        <record id="group_housemaid_salesman"
            model="res.groups">
            <field name="name">Salesman</field>
            <field name="category_id"
                ref="module_category_housemaid"/>
        </record>

        <record id="group_housemaid_operator"
            model="res.groups">
            <field name="name">Operator</field>
            <field name="category_id"
                ref="module_category_housemaid"/>
        </record>

        <record id="group_housemaid_manager"
            model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id"
                ref="module_category_housemaid"/>
            <field name="implied_ids"
                eval="[(4, ref('group_housemaid_operator')), (4, ref('group_housemaid_salesman'))]"/>
        </record>


    </data>
    <!-- Company-restricted Records -->
    <data noupdate="1">
        <record model="ir.rule"
            id="housemaid_maids_restricted_company_rule">
            <field name="name">Maids: multi-company</field>
            <field name="model_id"
                ref="housemaid.model_housemaid_maids"/>
            <field name="global"
                eval="True"/>
            <field name="domain_force">
                [('company_id', 'in', company_ids)]
            </field>
        </record>


    </data>
    <!-- Company-restricted Records -->
    <data noupdate="1">
        <record model="ir.rule"
            id="housemaid_manage_everything_rule">
            <field name="name">Housemaid Manage Everthing</field>
            <field name="model_id"
                ref="housemaid.model_housemaid_maids"/>
            <field name="groups"
                eval="[(4, ref('group_housemaid_manager'))]"/>
            <field name="domain_force">
                [(1, '=', 1)]
            </field>
            <field name="perm_read"
                eval="1"/>
            <field name="perm_create"
                eval="1"/>
            <field name="perm_write"
                eval="1"/>
            <field name="perm_unlink"
                eval="1"/>
        </record>


    </data>
</odoo>
