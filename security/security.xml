<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_housemaid">
            <field name="name">Housemaid Management</field>
            <field name="description">Helps you manage your Housemaid App.</field>
            <field name="sequence">30</field>
        </record>

        <record id="group_housemaid_operator" model="res.groups">
            <field name="name">Operator</field>
            <field name="category_id" ref="module_category_housemaid"/>
        </record>
        <record id="group_housemaid_salesman" model="res.groups">
            <field name="name">Salesman</field>
            <field name="category_id" ref="module_category_housemaid"/>
        </record>

        <record id="group_farm_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_housemaid"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_housemaid_operator')), (4, ref('group_housemaid_salesman'))]"/>
        </record>


    </data>
    <!-- Company-restricted Records -->
    <data noupdate="1">
        <record model="ir.rule" id="farm_projects_restricted_company_rule">
            <field name="name">Farm Projects: multi-company</field>
            <field name="model_id" ref="ms_farm.model_farm_projects"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                [('company_id', 'in', company_ids)]
            </field>
        </record>
        <record model="ir.rule" id="farm_operations_restricted_company_rule">
