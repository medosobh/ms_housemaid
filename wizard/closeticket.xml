<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="housemaid_closeticket_wizard_form"
            model="ir.ui.view">
            <field name="name">housemaid.closeticket.form</field>
            <field name="model">housemaid.closeticket</field>
            <field name="arch"
                type="xml">
                <form>
                    <group name="closeticket"
                        string="Close Ticket">
                        <field name="closereason_id"
                            class="oe_inline"/>
                        <field name="tickets_id"
                            class="oe_inline"/>
                        <field name="user_id"
                            class="oe_inline"/>
                        <field name="description"
                            class="oe_inline"/>
                    </group>

                    <footer>
                        <button string="Close Ticket"
                            name="action_closed_ticket"
                            context="{'tickets_id': id, 'user_id': user_id}"
                            type="object"
                            class="oe_highlight"
                            data-hotkey="q"/>
                        <button string="Cancel"
                            class="btn btn-secondary"
                            special="cancel"
                            data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="housemaid_tickets_action_wizard"
            model="ir.actions.act_window">
            <field name="name">Close Ticket</field>
            <field name="res_model">housemaid.closeticket</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
