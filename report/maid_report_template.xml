<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_template_maid_resume">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!-- <div class="page"> -->
                    <div class="page" t-attf-style="background-image:url('/ms_housemaid/static/img/maid.png'); background-size:195mm 282mm; width:195mm; height:282mm;">
                        <h3>First Report</h3>
                        <div calss="row">
                            <div class="col">
                                <t t-if="doc.image">
                                    <img t-att-src="image_data_uri(doc.image)" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;height: 150px;"/>
                                </t>
                                <t t-else="">
                                    <img src="/ms_housemaid/static/img/maid.png" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;" />
                                </t>
                            </div>
                            <div class="col">
                                <p> State:
                                    <span t-out="doc.state" />
                                </p>
                                <p> Office:
                                    <span t-out="doc.offices_id.name" />
                                </p>
                                <p> Code:
                                    <span t-out="doc.code" />
                                </p>
                                <p> Name:
                                    <span t-out="doc.name" />
                                </p>
                                <p> Phone:
                                    <span t-out="doc.phone" />
                                </p>
                                <p> Email:
                                    <span t-out="doc.email" />
                                </p>
                                <p> Country:
                                    <span t-out="doc.country_id.name" />
                                </p>
                            </div>
                            <div class="col">
                                <p> Job :
                                    <span t-out="doc.jobs_id.name" />
                                </p>
                                <p> Monthly Salary:
                                    <span t-out="doc.monthly_salary" />
                                </p>
                                <p> Currancy:
                                    <span t-out="doc.currency_id.name" />
                                </p>
                                <p> Contract Period:
                                    <span t-out="doc.contract_period" />
                                </p>
                            </div>
                            <div class="col">
                                <p> Arabic Language:
                                    <t t-if="maids.arabic_lang">
														Yes:
                                        <input type="checkbox" id="checkbox_arabic_lang_true" checked="checked" />
														No:
                                        <input type="checkbox" id="checkbox_arabic_lang_false"/>
                                    </t>
                                    <t t-if="not maids.arabic_lang">
														Yes:
                                        <input type="checkbox" id="checkbox_arabic_lang_true" />
														No:
                                        <input type="checkbox" id="checkbox_arabic_lang_false" checked="checked"/>
                                    </t>
                                </p>
                                <t t-if="maids.english_lang">
														Yes:
                                    <input type="checkbox" id="checkbox_english_lang_true" checked="checked" />
														No:
                                    <input type="checkbox" id="checkbox_english_lang_false"/>
                                </t>
                                <t t-if="not maids.english_lang">
														Yes:
                                    <input type="checkbox" id="checkbox_english_lang_true" />
														No:
                                    <input type="checkbox" id="checkbox_english_lang_false" checked="checked"/>
                                </t>
                                <p> Eductaion:
                                    <span t-out="doc.educations_id.name" />
                                </p>
                            </div>
                            <div class="col">
                                <p class="mb-4">
											Passport
										</p>
                                <p> Passport No:
                                    <span t-out="doc.passport_no" />
                                </p>
                                <p> Passport Place:
                                    <span t-out="doc.passport_place" />
                                </p>
                                <p> Issue Date:
                                    <span t-out="doc.passport_issue_date" />
                                </p>
                                <p> Expire Date:
                                    <span t-out="doc.passport_expire_date" />
                                </p>
                                <p> Identation No:
                                    <span t-out="doc.identation" />
                                </p>
                            </div>
                            <div class="col">
                            
                                <p t-out="doc.religion" />
                                <p t-out="doc.gender" />
                                <p t-out="doc.children_no" />
                                <p t-out="doc.birthday" />
                                <p t-out="doc.place_of_birth" />
                                <p t-out="doc.marital_status" />
                            </div>
                            <div class="col">
                                <p t-out="doc.skin_color" />
                                <p t-out="doc.age" />
                                <p t-out="doc.hight" />
                                <p t-out="doc.weight" />
                            </div>
                            <div class="col">
                                <p t-out="doc.skills_cleaning" />
                                <p t-out="doc.skills_arabic_cooking" />
                                <p t-out="doc.skills_baby_sitting" />
                                <p t-out="doc.skills_washing" />
                                <p t-out="doc.skills_ironing" />
                                <p t-out="doc.skills_googlelocation" />
                                <p t-out="doc.skills_driving" />
                            </div>
                            <div class="col">
                                <p t-out="doc.description" />
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="action_report_action_maid_resume" model="ir.actions.report">
        <field name="name">Maid Resume</field>
        <field name="model">housemaid.maids</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ms_housemaid.report_template_maid_resume</field>
        <field name="report_file">ms_housemaid.report_template_maid_resume</field>
        <field name="print_report_name">'Resume Of %s' % object.name</field>
        <field name="binding_model_id" ref="model_housemaid_maids"/>
        <field name="binding_type">report</field>
    </record>
</odoo>